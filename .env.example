# Django Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# CORE SETTINGS
# ============================================================================

# Debug mode: Set to True for development, False for production
# This single flag controls all environment-specific settings
DEBUG=True

# Secret key for Django (generate a new one for production!)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# For production: Use DATABASE_URL (provided by hosting service like Render)
# Format: postgresql://user:password@host:port/database
# Example: postgresql://user:pass@localhost:5432/tourbot_db
DATABASE_URL=

# For development: Optional individual database settings (if not using DATABASE_URL)
# These are only used if DATABASE_URL is not set and DEBUG=True
DB_NAME=tourbot_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# CORS & FRONTEND CONFIGURATION
# ============================================================================

# Frontend URL (used for CORS in production)
# Development: http://localhost:3000
# Production: https://your-frontend-domain.vercel.app
FRONTEND_URL=http://localhost:3000

# CORS Allowed Origins (comma-separated, optional)
# If not set, will use FRONTEND_URL
# Example: https://app1.vercel.app,https://app2.vercel.app
CORS_ALLOWED_ORIGINS=

# ============================================================================
# PRODUCTION SETTINGS (only used when DEBUG=False)
# ============================================================================

# Allowed hosts (comma-separated, required in production)
# Example: your-backend.onrender.com,api.yourdomain.com
ALLOWED_HOSTS=

# SSL Redirect (default: True in production)
# Set to False if behind a reverse proxy that handles SSL
SECURE_SSL_REDIRECT=True

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# OpenAI API Key (required for chatbot functionality)
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# NOTES
# ============================================================================
# 
# Development Mode (DEBUG=True):
#   - Uses SQLite by default (or local PostgreSQL if DATABASE_URL is set)
#   - Allows all hosts (*)
#   - Enables verbose logging
#   - CORS allows http://localhost:3000
#   - Django serves static files (no WhiteNoise)
#
# Production Mode (DEBUG=False):
#   - Requires DATABASE_URL
#   - Requires ALLOWED_HOSTS
#   - Requires CORS_ALLOWED_ORIGINS or FRONTEND_URL
#   - Uses WhiteNoise for static files
#   - Enables security settings (SSL redirect, secure cookies, etc.)
#   - Less verbose logging
#
# To switch environments, simply change DEBUG=True to DEBUG=False in .env
